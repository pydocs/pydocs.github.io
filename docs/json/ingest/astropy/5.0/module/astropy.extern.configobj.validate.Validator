        },
        {
          "type": "BlockVerbatim",
          "data": {
            "lines": {
              "_lines": [
                {
                  "_line": ">>> def int_range_check(value, min, max):",
                  "_number": 0,
                  "_offset": 0
                },
                {
                  "_line": "...     # turn min and max from strings to integers",
                  "_number": 1,
                  "_offset": 0
                },
                {
                  "_line": "...     min = int(min)",
                  "_number": 2,
                  "_offset": 0
                },
                {
                  "_line": "...     max = int(max)",
                  "_number": 3,
                  "_offset": 0
                },
                {
                  "_line": "...     # check that value is of the correct type.",
                  "_number": 4,
                  "_offset": 0
                },
                {
                  "_line": "...     # possible valid inputs are integers or strings",
                  "_number": 5,
                  "_offset": 0
                },
                {
                  "_line": "...     # that represent integers",
                  "_number": 6,
                  "_offset": 0
                },
                {
                  "_line": "...     if not isinstance(value, (int, long, string_type)):",
                  "_number": 7,
                  "_offset": 0
                },
                {
                  "_line": "...         raise VdtTypeError(value)",
                  "_number": 8,
                  "_offset": 0
                },
                {
                  "_line": "...     elif isinstance(value, string_type):",
                  "_number": 9,
                  "_offset": 0
                },
                {
                  "_line": "...         # if we are given a string",
                  "_number": 10,
                  "_offset": 0
                },
                {
                  "_line": "...         # attempt to convert to an integer",
                  "_number": 11,
                  "_offset": 0
                },
                {
                  "_line": "...         try:",
                  "_number": 12,
                  "_offset": 0
                },
                {
                  "_line": "...             value = int(value)",
                  "_number": 13,
                  "_offset": 0
                },
                {
                  "_line": "...         except ValueError:",
                  "_number": 14,
                  "_offset": 0
                },
                {
                  "_line": "...             raise VdtValueError(value)",
                  "_number": 15,
                  "_offset": 0
                },
                {
                  "_line": "...     # check the value is between our constraints",
                  "_number": 16,
                  "_offset": 0
                },
                {
                  "_line": "...     if not min <= value:",
                  "_number": 17,
                  "_offset": 0
                },
                {
                  "_line": "...          raise VdtValueTooSmallError(value)",
                  "_number": 18,
                  "_offset": 0
                },
                {
                  "_line": "...     if not value <= max:",
                  "_number": 19,
                  "_offset": 0
                },
                {
                  "_line": "...          raise VdtValueTooBigError(value)",
                  "_number": 20,
                  "_offset": 0
                },
                {
                  "_line": "...     return value",
                  "_number": 21,
                  "_offset": 0
                }
              ]
            }
          }
